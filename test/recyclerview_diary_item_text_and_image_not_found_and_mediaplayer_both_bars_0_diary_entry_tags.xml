<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">
    AnythingNew
    
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/recyclerview_diary_item_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum "
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:maxWidth="400px"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/recyclerview_diary_item_star_imageView"
            android:src="@drawable/star_transparent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:minHeight="35dp"
            android:maxHeight="35dp"
            android:height="35dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:focusable="false"
            android:clickable="true"/>

    </LinearLayout>

    <TextView
        android:textColor="@color/textColor"
        android:id="@+id/recyclerview_diary_item_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TeSDF GSDFG SDF GSDF SDFG SDFG FG DSSDFG SDFG SDFG SDFG SDFG SDFG SDFG SDFG SDFG SDFG SDFG SDFG FGH FG HDFG HER RT DRT ZCVGB CVB DFG D FG HFG "
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:maxWidth="400px"/>







    <ImageButton
        android:id="@+id/recyclerview_diary_item_image_not_found_button"
        android:src="@drawable/ic_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />








    <RelativeLayout

        android:id="@+id/recyclerview_diary_item_showExecutionsRating_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_background"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor">

        <ImageView
            android:id="@+id/recyclerview_diary_item_showExecutionsRating_Image"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_rate_executions_deep_blue_centered_custom"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            />

        <TextView
            android:id="@+id/recyclerview_diary_item_showExecutionsRating_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/recyclerview_diary_showExecutionsRating_ButtonText"
            android:textAlignment="textStart"
            android:textColor="@color/colourAsLinkIndicatingAction"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/recyclerview_diary_item_showExecutionsRating_Image"
            android:layout_toEndOf="@+id/recyclerview_diary_item_showExecutionsRating_Image"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            />


    </RelativeLayout>









    <RelativeLayout

        android:id="@+id/recyclerview_diary_item_showActivityExecutions_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_background"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor">

        <ImageView
            android:id="@+id/recyclerview_diary_item_showActivityExecutions_Image"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_activity_executions_deep_blue_centered"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            />

        <TextView
            android:id="@+id/recyclerview_diary_item_showActivityExecutions_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/recyclerview_diary_item_showActivityExecutions_Image"
            android:layout_toRightOf="@+id/recyclerview_diary_item_showActivityExecutions_Image"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:text="@string/recyclerview_diary_showActivityExecutions_ButtonText"
            android:textAlignment="textStart"
            android:textColor="@color/colourAsLinkIndicatingAction"
            android:textSize="18sp" />


    </RelativeLayout>



    <LinearLayout
        android:id="@+id/recyclerview_diary_item_voiceEntryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">




        <TextView
            android:id="@+id/recyclerview_diary_item_totalTimeOfRecord_textView"
            android:text="00:00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/recyclerview_diary_item_playVoiceEntry_Button"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_background"
                android:textColor="@color/textColor">

                <ImageView
                    android:id="@+id/recyclerview_diary_item_playVoiceEntry_Image"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_voice_entry_with_padding"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    />

                <TextView
                    android:id="@+id/recyclerview_diary_item_playVoiceEntry_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/recyclerview_diary_playVoiceEntry_TextViewText"
                    android:textAlignment="center"
                    android:textColor="@color/colourAsLinkIndicatingAction"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/recyclerview_diary_item_playVoiceEntry_Image"
                    android:layout_toEndOf="@+id/recyclerview_diary_item_playVoiceEntry_Image"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>















    <LinearLayout
        android:id="@+id/recyclerview_diary_item_mood_and_stresslevel_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/leftOfExecutionsRatingImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_thumb_down_grey" />

            <ImageView
                android:id="@+id/rightOfExecutionsRatingImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_thumb_up_grey" />
            <SeekBar
                android:id="@+id/seekBarExecutionsRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/leftOfExecutionsRatingImage"
                android:layout_toEndOf="@+id/leftOfExecutionsRatingImage"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/rightOfExecutionsRatingImage"
                android:layout_toStartOf="@+id/rightOfExecutionsRatingImage"
                android:thumb="@drawable/seekbar_thumb_mood"
                android:max="10"
                />

        </RelativeLayout>



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/leftOfMoodImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_mood_bad" />
            <ImageView
                android:id="@+id/rightOfMoodImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mood_good"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <SeekBar
                android:id="@+id/seekBarMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/leftOfMoodImage"
                android:layout_toEndOf="@+id/leftOfMoodImage"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/rightOfMoodImage"
                android:layout_toStartOf="@+id/rightOfMoodImage"
                android:thumb="@drawable/seekbar_thumb_mood"
                android:max="10"
                />

        </RelativeLayout>



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/leftOfStressbarImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_stresslevel_chilled" />
            <ImageView
                android:id="@+id/rightOfStressbarImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stresslevel_stressed"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <SeekBar
                android:id="@+id/seekBarStresslevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/leftOfStressbarImage"
                android:layout_toEndOf="@+id/leftOfStressbarImage"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/rightOfStressbarImage"
                android:layout_toStartOf="@+id/rightOfStressbarImage"
                android:max="10"
                android:thumb="@drawable/seekbar_thumb_stresslevel"
                />

        </RelativeLayout>


    </LinearLayout>
    AnythingNew
    
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>


</LinearLayout>
